<Page x:Class="HotelP.AdminMenu.WhatYouWant"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelP.AdminMenu"
      mc:Ignorable="d" 
      xmlns:rs="clr-namespace:HotelP.Properties"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WhatYouWant">

    <Grid>
        <StackPanel>
            <Button Grid.Row="1" Content="{x:Static rs:Resources.ButtonCreateRoom}" Margin="10" Background="#FF373434" Foreground="White" Click="CreateButton">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>


            </Button>
            <Button Grid.Row="1" Content="{x:Static rs:Resources.ButtonWatchBook}" Margin="10" Background="#FF373434" Foreground="White" Click="WatchBook">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>


            </Button>
        </StackPanel>
    </Grid>
</Page>
